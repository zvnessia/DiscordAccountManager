<Window x:Class="DiscordAccountManager.OverlayWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="DiscordAccountManager Overlay" 
        Width="400" Height="300" 
        WindowStyle="None" 
        AllowsTransparency="True" 
        Background="Transparent"
        Topmost="True">

    <Grid>
        <Border Background="#AA1E1E1E" 
                CornerRadius="10"
                Padding="10"
                MouseLeftButtonDown="Border_MouseLeftButtonDown">
            <StackPanel>
                <TextBlock Text="DiscordAccountManager" 
                           FontSize="18" 
                           FontWeight="Bold" 
                           Foreground="White" 
                           HorizontalAlignment="Center"/>

                <TextBlock x:Name="StatusText"
                           Text="Keine Accounts gespeichert"
                           FontSize="14"
                           Foreground="LightGray"
                           HorizontalAlignment="Center"
                           Margin="0,5,0,10"/>

                <Grid Width="200" Height="30">
                    <TextBox x:Name="EmailBox"
                             Width="200"
                             Background="Transparent"
                             Foreground="White"
                             BorderBrush="Gray"
                             GotFocus="TextBox_GotFocus"
                             LostFocus="TextBox_LostFocus"
                             Text="E-Mail"/>
                </Grid>

                <Grid Width="200" Height="30">
                    <TextBox x:Name="PasswordBox"
                             Width="200"
                             Background="Transparent"
                             Foreground="White"
                             BorderBrush="Gray"
                             GotFocus="TextBox_GotFocus"
                             LostFocus="TextBox_LostFocus"
                             Text="Passwort"/>

                   
                </Grid>

                <Grid Width="200" Height="30">
                    <TextBox x:Name="TokenBox"
                             Width="200"
                             Background="Transparent"
                             Foreground="White"
                             BorderBrush="Gray"
                             GotFocus="TextBox_GotFocus"
                             LostFocus="TextBox_LostFocus"
                             Text="Token (optional)"/>
                </Grid>

                <Button Content="Account hinzufügen" 
                        Width="150"
                        Click="AddAccount"
                        HorizontalAlignment="Center"
                        Margin="0,10,0,10"/>

                <Button Content="Schließen" 
                        Width="100"
                        Click="CloseOverlay"
                        HorizontalAlignment="Center"
                        Margin="0,10,0,10"/>

                <Button Content="Weiter" 
                        Width="60" Height="25"
                        HorizontalAlignment="Right"
                        VerticalAlignment="Bottom"
                        Margin="0,0,10,10" Click="Button_Click"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>
